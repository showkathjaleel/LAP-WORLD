                        aria-labelledby="orders-all-tab">
                        <div class="app-card app-card-orders-table shadow-sm mb-5">
                            <div class="app-card-body">
                                <div class="table-responsive">
                                    <table class="table app-table-hover mb-0 text-left">
                                        <thead>
                                            <tr>
                                                <th>Image</th>
                                                <th>User</th>
                                                <th>Product</th>
                                                <th>discription</th>
                                                <th>complaint</th>
                                                 <th>status</th>



                                            </tr>
                                        </thead>
                                        <tbody>

                                            {{#each returns}}
                                            <tr>
                                                <td class="product-col">
                                                    <img src="/images/product/{{this.returnProducts.img.[0]}}"
                                                        style="width:40px ; height: 40px;" alt="Product image">
                                                </td>

                                                <td class="price-col">{{this.return.deliverydetails.name}}</P>
                                                    <P>
                                                        {{this.return.deliverydetails.houseAddress.streetaddress}}</P>
                                                    <P>
                                                        {{this.return.deliverydetails.houseAddress.city}},
                                                        {{this.return.deliverydetails.houseAddress.pincode}}</P>
                                                    <P>
                                                        {{this.return.deliverydetails.houseAddress.state}},
                                                        {{this.return.deliverydetails.houseAddress.country}}
                                                </td>
                                                <td class="price-col">{{this.returnProducts.laptops}}</td>

                                                <td class="price-col">{{this.Discription}}</td>

                                                <td class="price-col">{{this.complaint}}</td>
                                                                                                <td>
                                                    <form action="/admin/returnProduct" method="post">

                                                       <input type="text" name="orderStatus" value="Return-approved" hidden>
                                                                 <input type="text" name="orderId" value="{{this.return._id}}" hidden>
                                                                  <input type="text" name="productId" value="{{this.returnProducts._id}}" hidden>
                                                                  {{!-- <input type="submit" class="btn btn-success" value="Return-approved"> --}}
                                                                  <button type="submit" class="btn btn-success">
                                                                    {{!-- {{this.orderStatus}} --}}
                                                                    Return-accepted
                                                                    </button>
                                                                  
                                                                </form>
                                                    
                                                                   </td>
                                                                   {{#if this.refund}}
                                                                   <td><a href="/admin/refund/?" class="btn btn-primary">Refund-Requested</a></td>
                                                                   {{/if}}
                                                                   </tr>
                                            {{/each}}
                                        </tbody>
                                    </table>
                                    {{!--
